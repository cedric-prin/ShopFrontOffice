Options -Indexes
RewriteEngine On

# DÉSACTIVER le rewriting pour les fichiers statiques AVANT TOUT
# Cette règle doit être absolument la première
RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot|map|pdf|zip|txt|json|xml)$ [NC]
RewriteRule ^(.*)$ - [L]

# Si le fichier existe physiquement, le servir DIRECTEMENT
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)$ - [L]

# Si c'est un répertoire qui existe, le servir DIRECTEMENT
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.*)$ - [L]

# Redirige le reste vers index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
